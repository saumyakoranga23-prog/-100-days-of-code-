#include <stdio.h>

struct Employee {
    char name[20];
    int id;
    float salary;
};

int main() {
    struct Employee e1, e2;
    FILE *fp;

    printf("Enter Name ID Salary: ");
    scanf("%s %d %f", e1.name, &e1.id, &e1.salary);

    fp = fopen("emp.bin", "wb");
    fwrite(&e1, sizeof(e1), 1, fp);
    fclose(fp);

    fp = fopen("emp.bin", "rb");
    fread(&e2, sizeof(e2), 1, fp);
    fclose(fp);

    printf("\nRead from file:\n");
    printf("Name: %s | ID: %d | Salary: %.2f\n", e2.name, e2.id, e2.salary);

    return 0;
}

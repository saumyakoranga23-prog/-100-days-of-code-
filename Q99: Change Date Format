#include <stdio.h>
#include <string.h>

int main() {
    char date[20];
    printf("Enter date in dd/mm/yyyy format: ");
    scanf("%s", date);
    
    int day, month, year;
    sscanf(date, "%d/%d/%d", &day, &month, &year);
    
    char *months[] = {"Jan", "Feb", "Mar", "Apr", "May", "Jun", 
                     "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"};
    
    printf("Formatted date: %02d-%s-%d\n", day, months[month-1], year);
    
    return 0;
}

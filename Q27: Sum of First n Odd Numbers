#include <stdio.h>

int main() {
    int n;
    printf("Enter the value of n: ");
    scanf("%d", &n);
    
    int sum = 0;
    int oddNumber = 1;
    
    for (int i = 0; i < n; i++) {
        sum += oddNumber;
        oddNumber += 2;
    }
    
    printf("Sum of first %d odd numbers: %d\n", n, sum);
    
    return 0;
}

#include <stdio.h>

double sumSeries(int n) {
    double sum = 0.0;
    int numerator = 1;
    int denominator = 2;
    
    for (int i = 0; i < n; i++) {
        sum += (double)numerator / denominator;
        numerator += 2;
        denominator += 2;
    }
    
    return sum;
}

int main() {
    int terms;
    printf("Enter number of terms: ");
    scanf("%d", &terms);
    
    double result = sumSeries(terms);
    printf("Sum of the series: %.4lf\n", result);
    
    return 0;
}
